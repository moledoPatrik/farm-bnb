<div class="container mt-3">
  <h5><%=@animals.count %>  Animals</h5>
</div>
<div class="container">
  <div class="row">
    <div class="col col-md-7">
      <%= form_with url: animals_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an animal" %>
        <%= submit_tag "Search", class: "btn btn-primary", style: "background-color: #309533; border-color: #309533" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container mt-2">
  <div class="row">
    <div class="col col-md-7">
      <div class="cards">
        <% @animals.each do |animal|  %>
          <%= link_to animal_path(animal), class: "links" do%>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path animal.photo.key %>)">
               <h1><%= animal.name %></h1>
              <div class="card-details">
                <h1><%= animal.species %></h1>
                <h4>ï¿¥<%= animal.price %> per day</h4>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col col-md-5">
      <div id = "map"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
