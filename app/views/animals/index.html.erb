<div class="container mt-2">
<h4><%=@animals.count %>  Animals</h4>
</div>

<div class="container mt-2">

  <div class="cards">
    <% @animals.each do |animal|  %>
      <%= link_to animal_path(animal), class: "links" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path animal.photo.key %>)">
          <div class="card-details">
            <h1><%= animal.species %></h1>
            <h4>ï¿¥<%= animal.price %> per day</h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div id = "map"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
