<div class="container d-flex justify-content-between">
  <div class="left-section my-4 me-4" style="width: 100%;">
    <h1><%= @animal.species %></h1>
    <h3 class="mt-3"><%= @animal.name %></h3>
    <p><%= @animal.description %></p>
    <div style="width: 100%; height: 300px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <div class="right-section my-4">
    <%= cl_image_tag @animal.photo.key, alt: "text", width: "300px", height: "300px" %>
    <div class="mt-3">
      <%= render "bookings/form" %>
    </div>
  </div>
</div>
<div class="container d-flex flex-wrap mt-4">
  <h3>Other animals from this farmer</h3>
  <%# maybe do a carrosel thing below%>
  <div class="cards" style="grid-template-columns: 1fr 1fr 1fr 1fr;">
    <% @other_animals_from_owner.each do |animal|  %>
      <%= link_to animal_path(animal), class: "links" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path animal.photo.key %>)">
          <div class="card-details">
            <h1><%= animal.species %></h1>
            <h4>ï¿¥<%= animal.price %> per day</h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
